@model Project2IdentityEmail.Dtos.StatisticsDto

@{
    ViewData["Title"] = "İstatistikler";
    ViewData["ActivePage"] = "Statistics";
}

<div class="email-wrapper">
    <partial name="_EmailSidebarPartial" />

    <div class="email-header d-xl-flex align-items-center">
        <div class="d-flex align-items-center">
            <div class="email-toggle-btn"><i class='bx bx-menu'></i></div>
            <div class="breadcrumb-title pe-3 ms-3">E-posta İstatistikleri</div>
        </div>
        <div class="flex-grow-1 mx-xl-2 my-2 my-xl-0"></div>
        <div class="ms-auto d-flex align-items-center">
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary btn-sm">
                <i class='bx bx-chevron-left me-1'></i> Gelen Kutusuna Dön
            </a>
        </div>
    </div>

    <div class="email-content" id="statisticsContent">
        <div class="p-3">
            <div class="row g-3 mb-3">
                <div class="col-6 col-md-4 col-xl-2">
                    <div class="card radius-15 bg-gradient-cosmic mb-0 h-100">
                        <div class="card-body text-center py-3">
                            <div class="widgets-icons mx-auto bg-white rounded-circle mb-2">
                                <i class='bx bx-envelope text-primary'></i>
                            </div>
                            <h4 class="text-white mb-0">@Model.ToplamMail</h4>
                            <small class="text-white">Toplam</small>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-4 col-xl-2">
                    <div class="card radius-15 bg-gradient-ibiza mb-0 h-100">
                        <div class="card-body text-center py-3">
                            <div class="widgets-icons mx-auto bg-white rounded-circle mb-2">
                                <i class='bx bx-check text-success'></i>
                            </div>
                            <h4 class="text-white mb-0">@Model.OkunmusMail</h4>
                            <small class="text-white">Okunmuş</small>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-4 col-xl-2">
                    <div class="card radius-15 bg-gradient-ohhappiness mb-0 h-100">
                        <div class="card-body text-center py-3">
                            <div class="widgets-icons mx-auto bg-white rounded-circle mb-2">
                                <i class='bx bx-mail-send text-info'></i>
                            </div>
                            <h4 class="text-white mb-0">@Model.OkunmamisMail</h4>
                            <small class="text-white">Okunmamış</small>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-4 col-xl-2">
                    <div class="card radius-15 bg-gradient-moonlit mb-0 h-100">
                        <div class="card-body text-center py-3">
                            <div class="widgets-icons mx-auto bg-white rounded-circle mb-2">
                                <i class='bx bxs-star text-warning'></i>
                            </div>
                            <h4 class="text-white mb-0">@Model.YildizliMail</h4>
                            <small class="text-white">Yıldızlı</small>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-4 col-xl-2">
                    <div class="card radius-15 bg-gradient-burning mb-0 h-100">
                        <div class="card-body text-center py-3">
                            <div class="widgets-icons mx-auto bg-white rounded-circle mb-2">
                                <i class='bx bx-trash text-danger'></i>
                            </div>
                            <h4 class="text-white mb-0">@Model.SilinenMail</h4>
                            <small class="text-white">Silinen</small>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-4 col-xl-2">
                    <div class="card radius-15 bg-gradient-deepblue mb-0 h-100">
                        <div class="card-body text-center py-3">
                            <div class="widgets-icons mx-auto bg-white rounded-circle mb-2">
                                <i class='bx bx-category text-secondary'></i>
                            </div>
                            <h4 class="text-white mb-0">@Model.KategoriDagilimi.Count</h4>
                            <small class="text-white">Kategori</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-12 col-lg-8">
                    <div class="card radius-15 mb-0 h-100">
                        <div class="card-header border-bottom-0 py-2">
                            <h6 class="mb-0">Son 7 Günlük E-posta Trafiği</h6>
                        </div>
                        <div class="card-body pt-0">
                            <canvas id="dailyChart" height="200"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="card radius-15 mb-0 h-100">
                        <div class="card-header border-bottom-0 py-2">
                            <h6 class="mb-0">Kategori Dağılımı</h6>
                        </div>
                        <div class="card-body pt-0">
                            <canvas id="categoryChart" height="200"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-12">
                    <div class="card radius-15 mb-0">
                        <div class="card-header border-bottom-0 py-2">
                            <h6 class="mb-0">Son 6 Aylık E-posta Trafiği</h6>
                        </div>
                        <div class="card-body pt-0">
                            <canvas id="monthlyChart" height="80"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-3">
                <div class="col-12 col-lg-6">
                    <div class="card radius-15 mb-0 h-100">
                        <div class="card-header border-bottom-0 py-2">
                            <h6 class="mb-0">Okunma Durumu</h6>
                        </div>
                        <div class="card-body pt-0">
                            <canvas id="readStatusChart" height="180"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6">
                    <div class="card radius-15 mb-0 h-100">
                        <div class="card-header border-bottom-0 py-2">
                            <h6 class="mb-0">Hızlı Özet</h6>
                        </div>
                        <div class="card-body">
                            @{
                                var okumaOrani = Model.ToplamMail > 0 ? (Model.OkunmusMail * 100 / Model.ToplamMail) : 0;
                                var yildizOrani = Model.ToplamMail > 0 ? (Model.YildizliMail * 100 / Model.ToplamMail) : 0;
                                var kategoriToplam = Model.KategoriDagilimi.Values.Sum();
                                var kategoriOrani = Model.ToplamMail > 0 ? (kategoriToplam * 100 / Model.ToplamMail) : 0;
                            }
                            <div class="d-flex align-items-center mb-3">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1 small">Okunma Oranı</h6>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-success" style="width: @okumaOrani%"></div>
                                    </div>
                                </div>
                                <div class="ms-3">
                                    <span class="badge bg-success">@okumaOrani%</span>
                                </div>
                            </div>
                            <div class="d-flex align-items-center mb-3">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1 small">Yıldızlı Oranı</h6>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-warning" style="width: @yildizOrani%"></div>
                                    </div>
                                </div>
                                <div class="ms-3">
                                    <span class="badge bg-warning">@yildizOrani%</span>
                                </div>
                            </div>
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1 small">Kategorize Edilmiş</h6>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-info" style="width: @kategoriOrani%"></div>
                                    </div>
                                </div>
                                <div class="ms-3">
                                    <span class="badge bg-info">@kategoriOrani%</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <partial name="_ComposeEmailPartial" />
    <div class="overlay email-toggle-btn-mobile"></div>
</div>

@section Styles {
    <style>
        .widgets-icons {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }
        .bg-gradient-cosmic { background: linear-gradient(to right, #8e2de2, #4a00e0); }
        .bg-gradient-ibiza { background: linear-gradient(to right, #11998e, #38ef7d); }
        .bg-gradient-ohhappiness { background: linear-gradient(to right, #00b09b, #96c93d); }
        .bg-gradient-moonlit { background: linear-gradient(to right, #0f2027, #203a43, #2c5364); }
        .bg-gradient-burning { background: linear-gradient(to right, #f5af19, #f12711); }
        .bg-gradient-deepblue { background: linear-gradient(to right, #6a11cb, #2575fc); }
        
        #statisticsContent {
            overflow-y: auto !important;
            padding-bottom: 20px;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        new PerfectScrollbar('.email-navigation');
        new PerfectScrollbar('#statisticsContent');

        new Chart(document.getElementById('dailyChart').getContext('2d'), {
            type: 'bar',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.GunlukMailSayisi.Keys.Select(k => $"'{k}'")))],
                datasets: [{
                    label: 'E-posta',
                    data: [@Html.Raw(string.Join(",", Model.GunlukMailSayisi.Values))],
                    backgroundColor: 'rgba(102, 126, 234, 0.7)',
                    borderColor: 'rgba(102, 126, 234, 1)',
                    borderWidth: 1,
                    borderRadius: 5
                }]
            },
            options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } }, scales: { y: { beginAtZero: true } } }
        });

        var catLabels = [@Html.Raw(string.Join(",", Model.KategoriDagilimi.Keys.Select(k => $"'{k}'")))];
        var catData = [@Html.Raw(string.Join(",", Model.KategoriDagilimi.Values))];
        if (catLabels.length === 0) { catLabels = ['Kategorisiz']; catData = [@Model.ToplamMail]; }
        
        new Chart(document.getElementById('categoryChart').getContext('2d'), {
            type: 'doughnut',
            data: {
                labels: catLabels,
                datasets: [{ data: catData, backgroundColor: ['rgba(40,167,69,0.8)','rgba(23,162,184,0.8)','rgba(255,193,7,0.8)','rgba(220,53,69,0.8)','rgba(102,126,234,0.8)'], borderWidth: 2 }]
            },
            options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { position: 'bottom' } } }
        });

        new Chart(document.getElementById('monthlyChart').getContext('2d'), {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.AylikMailSayisi.Keys.Select(k => $"'{k}'")))],
                datasets: [{ label: 'Aylık', data: [@Html.Raw(string.Join(",", Model.AylikMailSayisi.Values))], fill: true, backgroundColor: 'rgba(118,75,162,0.2)', borderColor: 'rgba(118,75,162,1)', tension: 0.4 }]
            },
            options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } }, scales: { y: { beginAtZero: true } } }
        });

        new Chart(document.getElementById('readStatusChart').getContext('2d'), {
            type: 'pie',
            data: {
                labels: ['Okunmuş', 'Okunmamış'],
                datasets: [{ data: [@Model.OkunmusMail, @Model.OkunmamisMail], backgroundColor: ['rgba(40,167,69,0.8)','rgba(220,53,69,0.8)'], borderWidth: 2 }]
            },
            options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { position: 'bottom' } } }
        });
    </script>
}
