@model Project2IdentityEmail.Entities.AppUser

@{
    ViewData["Title"] = "Profil";
    var avatarUrl = Model?.ImageUrl ?? "~/assets/images/avatars/avatar-1.png";
}

@section Styles {
    <style>
        .profile-page-container {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            background: linear-gradient(135deg, #1a1d21 0%, #2d3238 100%);
        }
        
        .profile-main-card {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            max-width: 900px;
            width: 100%;
            overflow: hidden;
        }
        
        .profile-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 30px;
            display: flex;
            align-items: center;
            gap: 25px;
        }
        
        .profile-avatar-container {
            position: relative;
            flex-shrink: 0;
        }
        
        .profile-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: 4px solid rgba(255,255,255,0.9);
            object-fit: cover;
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        }
        
        .avatar-edit-btn {
            position: absolute;
            bottom: 0;
            right: 0;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: #fff;
            color: #667eea;
            border: 3px solid #667eea;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 16px;
        }
        
        .avatar-edit-btn:hover {
            background: #667eea;
            color: #fff;
            transform: scale(1.15);
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.5);
        }
        
        .profile-user-info {
            color: #fff;
            flex-grow: 1;
        }
        
        .profile-user-info h2 {
            margin: 0 0 8px 0;
            font-size: 1.6rem;
            font-weight: 600;
        }
        
        .profile-user-info .user-email {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.95rem;
            opacity: 0.95;
            margin-bottom: 4px;
        }
        
        .profile-user-info .user-username {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.9rem;
            opacity: 0.85;
        }
        
        .profile-body {
            padding: 25px 30px;
        }
        
        .nav-pills-custom {
            border-bottom: 2px solid #eee;
            padding-bottom: 15px;
            margin-bottom: 20px;
        }
        
        .nav-pills-custom .nav-link {
            color: #667eea;
            border-radius: 10px;
            padding: 10px 20px;
            margin-right: 10px;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .nav-pills-custom .nav-link:hover {
            background: rgba(102, 126, 234, 0.1);
        }
        
        .nav-pills-custom .nav-link.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #fff;
        }
        
        .form-label {
            font-weight: 500;
            color: #444;
            margin-bottom: 6px;
        }
        
        .form-control {
            border-radius: 10px;
            padding: 12px 15px;
            border: 1px solid #ddd;
            transition: all 0.3s ease;
        }
        
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.15);
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 12px 25px;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        }
        
        .btn-warning {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            border: none;
            border-radius: 10px;
            padding: 12px 25px;
            font-weight: 500;
            color: #fff;
        }
        
        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(245, 87, 108, 0.4);
            color: #fff;
        }
        
        .profile-footer {
            display: flex;
            justify-content: space-between;
            padding: 20px 30px;
            background: #f8f9fa;
            border-top: 1px solid #eee;
        }
        
        .btn-outline-primary {
            border-radius: 10px;
            padding: 10px 20px;
            font-weight: 500;
        }
        
        .btn-outline-danger {
            border-radius: 10px;
            padding: 10px 20px;
            font-weight: 500;
        }
        
        .alert {
            border-radius: 10px;
            margin-bottom: 20px;
        }
        
        @@media (max-width: 768px) {
            .profile-header {
                flex-direction: column;
                text-align: center;
                padding: 25px 20px;
            }
            
            .profile-user-info {
                text-align: center;
            }
            
            .profile-user-info .user-email,
            .profile-user-info .user-username {
                justify-content: center;
            }
            
            .profile-body {
                padding: 20px;
            }
            
            .profile-footer {
                flex-direction: column;
                gap: 10px;
                padding: 15px 20px;
            }
            
            .profile-footer .btn {
                width: 100%;
            }
            
            .nav-pills-custom .nav-link {
                padding: 8px 15px;
                font-size: 0.9rem;
            }
        }
    </style>
}

<div class="profile-page-container">
    <div class="profile-main-card">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                <i class='bx bx-check-circle me-2'></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
            </div>
        }
        
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                <i class='bx bx-error-circle me-2'></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
            </div>
        }

        <div class="profile-header">
            <div class="profile-avatar-container">
                <img src="@avatarUrl" alt="Profil Resmi" class="profile-avatar" id="currentAvatar">
                <label for="avatarInput" class="avatar-edit-btn" title="Profil Resmini Değiştir">
                    <i class='bx bx-camera'></i>
                </label>
            </div>
            <div class="profile-user-info">
                <h2>@Model?.Name @Model?.Surname</h2>
                <div class="user-email">
                    <i class='bx bx-envelope'></i>
                    <span>@Model?.Email</span>
                </div>
                <div class="user-username">
                    <i class='bx bx-user'></i>
                    <span>@@@Model?.UserName</span>
                </div>
            </div>
        </div>

        <form id="avatarForm" asp-action="UpdateAvatar" asp-controller="Profile" method="post" enctype="multipart/form-data" style="display: none;">
            <input type="file" name="imageFile" id="avatarInput" accept="image/*">
        </form>

        <div class="profile-body">
            <ul class="nav nav-pills nav-pills-custom" id="profileTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button">
                        <i class='bx bx-user me-1'></i>Profil Bilgileri
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="password-tab" data-bs-toggle="tab" data-bs-target="#password" type="button">
                        <i class='bx bx-lock me-1'></i>Şifre Değiştir
                    </button>
                </li>
            </ul>
            
            <div class="tab-content" id="profileTabsContent">
                <div class="tab-pane fade show active" id="profile" role="tabpanel">
                    <form asp-action="UpdateProfile" asp-controller="Profile" method="post">
                        <div class="row mb-3">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label class="form-label">Ad</label>
                                <input type="text" name="Name" class="form-control" value="@Model?.Name" placeholder="Adınız">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Soyad</label>
                                <input type="text" name="Surname" class="form-control" value="@Model?.Surname" placeholder="Soyadınız">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Hakkımda</label>
                            <textarea name="About" class="form-control" rows="2" placeholder="Kendiniz hakkında kısa bir bilgi...">@Model?.About</textarea>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">
                                <i class='bx bx-save me-1'></i>Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
                
                <div class="tab-pane fade" id="password" role="tabpanel">
                    <form asp-action="ChangePassword" asp-controller="Profile" method="post">
                        <div class="row mb-3">
                            <div class="col-md-12 mb-3">
                                <label class="form-label">Mevcut Şifre</label>
                                <div class="input-group" id="show_hide_current">
                                    <input type="password" name="CurrentPassword" class="form-control border-end-0" placeholder="Mevcut şifreniz" required>
                                    <a href="javascript:;" class="input-group-text bg-transparent" style="border-radius: 0 10px 10px 0;"><i class="bx bx-hide"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label class="form-label">Yeni Şifre</label>
                                <div class="input-group" id="show_hide_new">
                                    <input type="password" name="NewPassword" class="form-control border-end-0" placeholder="Yeni şifreniz" required>
                                    <a href="javascript:;" class="input-group-text bg-transparent" style="border-radius: 0 10px 10px 0;"><i class="bx bx-hide"></i></a>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Yeni Şifre Tekrar</label>
                                <div class="input-group" id="show_hide_confirm">
                                    <input type="password" name="ConfirmNewPassword" class="form-control border-end-0" placeholder="Yeni şifrenizi tekrar girin" required>
                                    <a href="javascript:;" class="input-group-text bg-transparent" style="border-radius: 0 10px 10px 0;"><i class="bx bx-hide"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-warning">
                                <i class='bx bx-lock me-1'></i>Şifreyi Değiştir
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="profile-footer">
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary">
                <i class='bx bx-arrow-back me-1'></i>Gelen Kutusuna Dön
            </a>
            <a asp-action="Logout" asp-controller="Login" class="btn btn-outline-danger">
                <i class='bx bx-log-out me-1'></i>Çıkış Yap
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#avatarInput').on('change', function() {
                if (this.files && this.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('#currentAvatar').attr('src', e.target.result);
                    };
                    reader.readAsDataURL(this.files[0]);
                    
                    $('#avatarForm').submit();
                }
            });
            
            function setupPasswordToggle(selector) {
                $(selector + " a").on('click', function(event) {
                    event.preventDefault();
                    var input = $(selector + ' input');
                    var icon = $(selector + ' i');
                    
                    if (input.attr("type") === "text") {
                        input.attr('type', 'password');
                        icon.addClass("bx-hide").removeClass("bx-show");
                    } else {
                        input.attr('type', 'text');
                        icon.removeClass("bx-hide").addClass("bx-show");
                    }
                });
            }
            
            setupPasswordToggle('#show_hide_current');
            setupPasswordToggle('#show_hide_new');
            setupPasswordToggle('#show_hide_confirm');
        });
    </script>
}
